root = true;

[*] # 表示所有文件适用
charset = utf-8 # 设置文件字符集
indent_style = space # 缩进类型
indent_size = 2 # 缩进大小
end_of_line = lf # 换行类型
insert_final_newline = true # 始终在文件末尾插入一个新行
trim_trailing_whitespace = true # 去除行首的任意空白字符

[*.md]
insert_final_newline = false
trim_trailing_whitespace = false
max_line_length = off
